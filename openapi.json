{
  "openapi": "3.0.0",
  "info": {
    "title": "Rezkyoo API",
    "version": "1.0.0",
    "description": "Actions for finding restaurants and making/continuing call batches for reservations."
  },
  "servers": [
    {
      "url": "https://unhurriedly-untyrannised-mitch.ngrok-free.dev"
    }
  ],
  "paths": {
    "/restaurants/search_and_call": {
      "post": {
        "operationId": "find_restaurants_and_call",
        "summary": "Find nearby restaurants and start a call batch",
        "description": "Given cuisine, location, party size, date/time, create a call batch and start dialing eligible restaurants.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchAndCallRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Batch created and calls started",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchAndCallResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/restaurants/search_more": {
      "post": {
        "operationId": "search_more_restaurants",
        "summary": "Call the next group of restaurants from a search",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "original_batch_id": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Started calling the next batch of restaurants",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchAndCallResponse"
                }
              }
            }
          },
          "404": {
            "description": "Original batch not found or no more restaurants"
          }
        }
      }
    },
    "/reservations/book": {
      "post": {
        "operationId": "book_reservation",
        "summary": "Book a reservation at a specific restaurant",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookingRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Booking call started"
          }
        }
      }
    },
    "/status/{batchId}": {
      "get": {
        "operationId": "getBatchStatus",
        "summary": "Get the status of a call batch",
        "description": "Poll this endpoint to get live updates on the status of each call in a batch, including final results and transcripts.",
        "parameters": [
          {
            "name": "batchId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the batch to check."
          }
        ],
        "responses": {
          "200": {
            "description": "Batch status retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BatchStatusResponse"
                }
              }
            }
          },
          "404": {
            "description": "Batch not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchAndCallRequest": {
        "type": "object",
        "properties": {
          "cuisine": { "type": "string" },
          "location": { "type": "string" },
          "party_size": { "type": "integer" },
          "date": { "type": "string" },
          "time": { "type": "string" },
          "intent": { "type": "string" },
          "max_calls": { "type": "integer" }
        },
        "required": ["cuisine", "location", "party_size", "date", "time"]
      },
      "SearchAndCallResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "message": { "type": "string" },
          "batchId": { "type": "string" },
          "mapUrl": { "type": "string" },
          "restaurants": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "formatted_phone_number": { "type": "string" },
                "rating": { "type": "number" },
                "user_ratings_total": { "type": "integer" }
              }
            }
          },
          "query": { "type": "object" }
        }
      },
      "BookingRequest": {
        "type": "object",
        "properties": {
          "restaurant_phone": { "type": "string" },
          "party_size": { "type": "integer" },
          "date": { "type": "string" },
          "time": { "type": "string" },
          "user_name": { "type": "string" },
          "user_phone": { "type": "string" }
        }
      },
      "BatchStatusResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "status": { "type": "string", "example": "calling" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string", "description": "The 'call' document ID from Firestore" },
                "batchId": { "type": "string" },
                "restaurantName": { "type": "string" },
                "phone": { "type": "string" },
                "status": { "type": "string", "example": "completed" },
                "raw": { "type": "string", "description": "The raw transcript of the call.", "example": "Hello, yes we have 7:30 available." },
                "result": {
                  "type": "object",
                  "properties": {
                    "outcome": { "type": "string", "example": "available" },
                    "ai_summary": { "type": "string" },
                    "alternative_time": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}