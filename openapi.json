{
  "openapi": "3.0.0",
  "info": {
    "title": "Rezkyoo API",
    "version": "1.0.0",
    "description": "Actions for finding restaurants and making/continuing call batches for reservations."
  },
  "servers": [
    {
      "url": "https://unhurriedly-untyrannised-mitch.ngrok-free.dev"
    }
  ],
  "paths": {
    "/restaurants/search_and_call": {
      "post": {
        "operationId": "find_restaurants_and_call",
        "summary": "Find nearby restaurants and start a call batch",
        "description": "Given cuisine, location, party size, date/time, create a call batch and start dialing eligible restaurants.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchAndCallRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Batch created and calls started",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchAndCallResponse"
                }
              }
            }
          },
          "400": { "description": "Invalid request" }
        }
      }
    },
    "/status/{batchId}": {
      "get": {
        "operationId": "getBatchStatus",
        "summary": "Get the status of a call batch",
        "description": "Poll this endpoint to get live updates on the status of each call in a batch, including final results and transcripts.",
        "parameters": [
          {
            "name": "batchId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "The ID of the batch to check."
          }
        ],
        "responses": {
          "200": {
            "description": "Batch status retrieved",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/BatchStatusResponse" } } }
          },
          "404": { "description": "Batch not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchAndCallRequest": {
        "type": "object",
        "required": ["cuisine", "location", "party_size", "date", "intent"],
        "properties": {
          "cuisine": { "type": "string" },
          "location": { "type": "string" },
          "party_size": { "type": "integer" },
          "date": { "type": "string" },
          "time": { "type": "string" },
          "intent": { "type": "string" },
          "max_calls": { "type": "integer" }
        },
        "allOf": [
          {
            "if": {
              "properties": { "intent": { "const": "specific_time" } }
            },
            "then": {
              "required": ["time"]
            }
          }
        ]
      },
      "SearchAndCallResponse": { "type": "object" },
      "BookingRequest": {
        "type": "object",
        "properties": {
          "restaurant_phone": { "type": "string" },
          "party_size": { "type": "integer" },
          "date": { "type": "string" },
          "time": { "type": "string" },
          "user_name": { "type": "string" },
          "user_phone": { "type": "string" }
        }
      },
      "BatchStatusResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "status": { "type": "string" },
          "items": { "type": "array", "items": { "type": "object" } }
        }
      }
    }
  }
}